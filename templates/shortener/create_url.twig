{% extends 'base.html.twig' %}

{% block body %}
    
    
{{ form_start(form, {attr: {class: 'block'}}) }}

    <div class="page-header">
        <h1>{{ 'create.title'|trans }}</h1>
    </div>
    
    {% for error in validateErrors %}
        <div class="alert alert-danger" role="alert">
            {{ error.message|trans }}
        </div>
    {% endfor %}
    
    <div class="form-group">
        {{ form_label(form.LongUrl) }}
        {{ form_widget(form.LongUrl, {attr: {class: 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.expiration) }}
        {{ form_widget(form.expiration, {attr: {class: 'form-control'}}) }}
    </div>
    
    {{ form_widget(form.saveAndCreateNew, {label: 'label.create_short_url', attr: {class: 'btn btn-primary'}}) }}

{{ form_end(form) }}
    
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('shortener') }}
{% endblock %}